     base >=4.7 && <5
   , Earley
   , hashable
   , haskeline
   , megaparsec
   , mmorph
   , mtl
   , relude
   , template-haskell
   , unordered-containers
  default-language: GHC2021

library sasha-testing
  import:         shared, tests
  hs-source-dirs: test
  build-depends:
    , aeson
    , base
    , Earley
    , generic-arbitrary
    , hashable
    , hspec
    , megaparsec
    , mtl
    , QuickCheck
    , quickcheck-instances
    , relude
    , safe
    , template-haskell
    , text
    , sasha
 exposed-modules:
      Test.Arbitrary.Verbs
      Test.Lexer
      Test.Parser.Atomics.Adverbs
      Test.Parser.Atomics.Utils
      Test.Parser.Atomics.Verbs
 default-language: GHC2021

executable sasha-tests
  import:         shared, tests
  main-is:        Main.hs
  hs-source-dirs: test src
  build-depends:
     base
     , Earley
     , hashable
     , hspec
     , megaparsec
     , QuickCheck
     , relude
     , template-haskell
     , text
     , sasha-testing
